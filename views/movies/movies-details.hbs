{{#with movie }}
  <h2>Details of {{title}}</h2>

  <p>Genre: {{genre}}</p>

  <p>Plot: {{plot}}</p>

  <p>Cast:
    {{#each cast}}
      <li>
        Name: {{name}}
        <br>
        Occupation: {{occupation}}
        <br>
        Catch phrase: {{catchPhrase}}
      </li>
    {{/each}}
  </p>
  <form action="/movies/{{_id}}/delete" method="post">
  <button type="submit">Delete</button>
</form>
{{/with}}

<a href="/movies">Return</a>